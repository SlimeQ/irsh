#!/usr/bin/env python3

from bs4 import BeautifulSoup
import urllib
import sys

BASEURL="https://encyclopediadramatica.se/{}"

if len(sys.argv) != 2:
    print("invalid commandline")
    sys.exit(1)

try:
    url = BASEURL.format(sys.argv[1].replace(" ", "_"))
    soup = BeautifulSoup(urllib.request.urlopen(url), "lxml")
    p = soup.find("div", id="bodyContent").find("p", recursive=False)
    sys.stdout.buffer.write(p.getText().encode('utf-8'))
except urllib.error.HTTPError:
    print("page not found")
    sys.exit(1)
