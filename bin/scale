#!/usr/bin/fish

if test (count $argv) -ne 3
    echo invalid commandline
    exit 1
end

set n $argv[3]

if test $n -gt 10
    set n 10
end

if test $n -lt 0
    set n 0
end

echo -n $argv[1]
echo -n [
set i 0
while test $i -lt $n
    echo -n '####'
    set i (math $i+1)
end
while test $i -lt 10
    echo -n '....'
    set i (math $i+1)
end
echo -n ]
echo $argv[2]
