#!/usr/bin/fish

set self (basename (status -f))
argparse -n$self 'n/count=!_validate_int --min 0 --max 100'  -- $argv >/dev/null ^&1
or begin
    printf "%s: Invalid commandline\n" $self >&2
    exit 1
end

if set -q _flag_n
    set n $_flag_n
else
    set n (math (random)%10+2)
end

if set -q argv[1]
    set msg "$argv"
else
    set msg (cat)
end

for i in (seq $n)
    printf "%s " $msg
end
