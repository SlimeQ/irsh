#!/usr/bin/fish

. lib/opts.fish
. lib/line.fish
. lib/sudo.fish

opts l $argv

set list

set i 1
while test $i -le (count $flags)
    switch $flags[$i]
        case '-l'
            set list 1
    end
    set i (math $i+1)
end

if test -n "$list"
    cat etc/sudoers
else if sudoer
    if test -z "$flags"
        echo "Aquaman says you're cool."
    end
end
