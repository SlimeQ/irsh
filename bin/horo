#!/usr/bin/fish

. lib/opts.fish

set url http://www.theonion.com/features/horoscope

if test (count $argv) -eq 1
    set name (echo "$argv[1..-1]" | sed 's/^\(.*\)$/\u\1/')
    curl -m 3 $url -s \
        | awk "{ if (n) { print; n = 0; } } /astro-name..$name/ { n = 1; }" \
        | sed 's/^\s\+//'
else
    echo invalid commandline
    exit 1
end
