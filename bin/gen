#!/usr/bin/fish

if test (count $argv) != 1
    echo 'invalid commandline'
    exit 1
end

set source (lib/path $argv[1])

if test ! -f $source
    echo 'file not found'
    exit 1
end

function corpus
    cat $source | tr '-' ' '
end

for i in (seq (math (random)%5+1))
     corpus | grep ' ' | sort -R | head -1 |\
        awk '{ srand(); printf "%s ", $(int(rand()*100)%(NF-1)+1); }'
end

corpus | sort -R | head -1 | awk '{ print $(NF) }'
