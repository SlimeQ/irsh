#!/usr/bin/fish

set self (basename (status -f))
argparse -n$self 'n/words=!_validate_int --min 0 --max 15' -- $argv >/dev/null ^&1
or begin
    printf "%s: Invalid commandline" $self >&2
    exit 1
end

if not set -q argv[1]
    printf "%s: Invalid commandline" $self >&2
    exit 1
end

if set -q _flag_n
    set words $_flag_n
else
    set words (math (random)%5+5)
end

function corpus
    bin/cat $argv
    or exit 1
end

for i in (seq $words)
     corpus $argv | tr '-' ' ' | shuf -n1 | \
        awk '{ srand(); printf "%s ", $(int(rand()*100)%(NF-1)+1); }'
end

corpus $argv | tr '-' ' ' | shuf -n1 | awk '{ print $(NF) }'
