#!/usr/bin/fish

source lib/irc.fish
source lib/sudo.fish

if sudoer
    if test (count $argv) -ge 1
        set to_chan (clean_chan $argv[1])
        if test (count $argv) -ge 2
            set to_say $argv[2..-1]
        else
            set to_say (cat)
        end
        echo PRIVMSG $to_chan :$to_say >var/cmd
    else
        echo invalid commandline
    end
end
