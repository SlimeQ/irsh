#!/usr/bin/fish

. lib/sudo.fish

if sudoer
    set n (math 512-(echo "PRIVMSG $CHAN :\r\n" | wc -c))
    for line in (python3 -c "import sys; c=$n; s=sys.stdin.buffer.raw.readall().decode('utf-8').rstrip().replace('\n', ' | ')"\n"for i in range(0, len(s), c): print(s[i:i+c])")
        echo PRIVMSG $CHAN ":$line" >var/cmd
    end
end
